<% provide(:title, "ユーザー情報") %>
<h2>ユーザー情報</h2>

<% if @users.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>氏名</th>
        <th>e-mail</th>
        <th>生年月日</th>
        <th>性別</th>
        <th>学校名</th>
        <th>面接日程</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td style="text-align: center"><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.birthday %></td>
          <td><%= user.sex %></td>
          <td><%= user.school %></td>
          <td><%= date_format(get_current_interview(user)) %></td>
          <td><%= link_to "面接一覧", user_interviews_path(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>会員情報がありません。</p>
<% end %>
